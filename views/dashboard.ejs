<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('../partials/head', { title: 'Tableau de bord' }) %>
</head>
<body>

  <!-- Barre de navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Mon Port</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/catways/view">Catways</a></li>
          <li class="nav-item"><a class="nav-link" href="/reservations/view">Réservations</a></li>
          <li class="nav-item"><a class="nav-link" href="/api-docs">Documentation API</a></li>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/logout">Déconnexion</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Contenu principal -->
  <div class="container mt-4">
    <div class="row mb-4">
      <div class="col-md-6">
        <h2>Bienvenue, <%= user.name %> !</h2>
        <p>Email : <strong><%= user.email %></strong></p>
      </div>
      <div class="col-md-6 text-end">
        <p class="text-muted">Date du jour : <strong><%= new Date().toLocaleDateString('fr-FR') %></strong></p>
      </div>
    </div>

    <h3 class="mb-3">Réservations en cours</h3>

    <% if (reservations && reservations.length > 0) { %>
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>Nom du bateau</th>
            <th>Numéro de catway</th>
            <th>Date de début</th>
            <th>Date de fin</th>
            <th>État</th>
          </tr>
        </thead>
        <tbody>
          <% reservations.forEach(res => { %>
            <tr>
              <td><%= res.boatName %></td>
              <td><%= res.catwayNumber %></td>
              <td><%= new Date(res.startDate).toLocaleDateString('fr-FR') %></td>
              <td><%= new Date(res.endDate).toLocaleDateString('fr-FR') %></td>
              <td><%= res.state %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <div class="alert alert-info">Aucune réservation en cours.</div>
    <% } %>
  </div>

    <%- include('../partials/script') %>
</body>
</html>
